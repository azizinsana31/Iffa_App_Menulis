<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12pt"
                android:gravity="center_horizontal"
                android:text="Cantum Perkataan"/>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                app:cardElevation="8dp"
                app:cardCornerRadius="5dp"
                >

                <ImageView
                    android:id="@+id/ivSoalSusunKata"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:srcCompat="@drawable/bag" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="5dp"
                    >
                    <TextView
                        android:id="@+id/txtPerkataan2_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="26pt"
                        android:gravity="center"
                       android:text="A"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="5dp"
                    >
                    <TextView
                        android:id="@+id/txtPerkataan2_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="26pt"
                        android:gravity="center"
                        android:text="G"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="5dp"
                    >
                    <TextView
                        android:id="@+id/txtPerkataan2_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="26pt"
                        android:gravity="center"
                        android:text="B"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <EditText
                android:id="@+id/txtJawabanPerkataan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:hint="[cuba susun huruf]"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnCheckPerkataan2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:background="@color/colorAccent"
                    android:textColor="#FFF"
                    android:text="check"
                    />

                <Button
                    android:id="@+id/btnResetPerkataan2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:background="#9C27B0"
                    android:textColor="#FFF"
                    android:text="reset"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
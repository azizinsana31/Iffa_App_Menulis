<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CantumAyat4Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Cantum Ayat 4"
                android:textSize="12pt"
                android:layout_gravity="center_horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintEnd_toEndOf="@+id/textView3"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:srcCompat="@drawable/aminah" />

            <TextView
                android:id="@+id/textViewAyat4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:text="Nama saya Aminah\nSaya suka warna kuning\nSaya beli cermin mata baru"
                android:textSize="8pt"
                app:layout_constraintEnd_toEndOf="@+id/imageView3"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <EditText
                android:id="@+id/textJawabanAyat4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:layout_gravity="center_horizontal"
                android:hint="Cuba Tulis"
                android:inputType="textPersonName"
                android:textSize="8pt"
                app:layout_constraintEnd_toEndOf="@+id/textViewAyat4"
                app:layout_constraintStart_toStartOf="@+id/textViewAyat4"
                app:layout_constraintTop_toBottomOf="@+id/textViewAyat4" />

            <EditText
                android:id="@+id/textJawaban2Ayat4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Cuba Tulis"
                android:layout_gravity="center_horizontal"
                android:inputType="textPersonName"
                android:textSize="8pt"
                app:layout_constraintEnd_toEndOf="@+id/textJawabanAyat4"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textJawabanAyat4"
                app:layout_constraintTop_toBottomOf="@+id/textJawabanAyat4" />

            <EditText
                android:id="@+id/textJawaban3Ayat4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Cuba Tulis"
                android:layout_gravity="center_horizontal"
                android:inputType="textPersonName"
                android:textSize="8pt"
                app:layout_constraintEnd_toEndOf="@+id/textJawaban2Ayat4"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/textJawaban2Ayat4"
                app:layout_constraintTop_toBottomOf="@+id/textJawaban2Ayat4" />

            <Button
                android:id="@+id/btnCekAyat4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginBottom="56dp"
                android:background="@color/colorAccent"
                android:text="Check"
                android:textColor="#fff"
                />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
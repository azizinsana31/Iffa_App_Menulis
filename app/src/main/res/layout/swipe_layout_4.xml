<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cantum Perkataan dan Ayat"
        android:textSize="10pt"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/poppins_medium"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        android:layout_gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/iv1_ayat"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/sikat_gigi_bersih"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/soalan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="7pt"
                android:text="Kasut Sekolah Adam Telah "/>

            <EditText
                android:id="@+id/jawabanAyat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:textSize="7pt"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="8pt"
        android:layout_marginTop="20dp"
        android:text="Pilih Jawapan"
        ></TextView>

    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    android:layout_marginTop="10dp"
    android:layout_gravity="center_horizontal"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        >
        <Button
            android:id="@+id/btnJawaban1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:background="#9C27B0"
            android:textColor="#FFF"
            android:layout_margin="5dp"
            android:text="[ 1 ]"
            />

        <Button
            android:id="@+id/btnJawaban2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:background="#9C27B0"
            android:textColor="#FFF"
            android:layout_margin="5dp"
            android:text="[ 2 ]"
            />

        <Button
            android:id="@+id/btnJawaban3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:background="#9C27B0"
            android:textColor="#FFF"
            android:layout_margin="5dp"
            android:text="[ 3 ]"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">

         <Button
             android:id="@+id/btnCheckAyat"
             android:layout_width="0dp"
             android:layout_weight=".5"
             android:layout_height="wrap_content"
             android:background="@color/colorAccent"
             android:textColor="#FFF"
             android:layout_margin="5dp"
             android:text="Check"
             />

         <Button
             android:id="@+id/btnSuarakAyat"
             android:layout_width="0dp"
             android:layout_weight=".5"
             android:layout_height="wrap_content"
             android:background="#69B80D"
             android:textColor="#FFF"
             android:layout_margin="5dp"
             android:text="Suara"
             />
     </LinearLayout>

</LinearLayout>
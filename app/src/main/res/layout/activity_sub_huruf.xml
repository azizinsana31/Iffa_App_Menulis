<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F4F4"
    android:padding="20dp"

    tools:context=".SubHurufActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            app:cardCornerRadius="5px"
            app:cardElevation="5px"
            >
            <TextView
                android:id="@+id/txtHuruf"
                android:fontFamily="@font/poppins_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="55pt"
                android:text="a" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            app:cardCornerRadius="5px"
            app:cardElevation="5px"
            >

            <ImageView
                android:id="@+id/animasiHuruf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <EditText
        android:id="@+id/txtJawabanHuruf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_check_huruf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:textColor="#FFF"
            android:text="Check"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            />

        <Button
            android:id="@+id/btn_suara"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:textColor="#FFF"
            android:text="Dengar Suara"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            />
    </LinearLayout>
</LinearLayout>